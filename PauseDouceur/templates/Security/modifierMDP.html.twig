{% block body %}
    <section class="ftco-section contact-section">
        <div class="container mt-5">
            <div class="row block-9 ">
                <div class="col-md-6 ftco-animate cart-detail cart-total ftco-bg-dark p-3 p-md-4"
                     style="margin-left: 250px">
                    <form action="{{ path('modifierMDP', {'email': email}) }}" method="post" class="contact-form ">
                        <h3 class="mb-4 billing-heading" align="center">RÃ©initialiser votre mot de passe</h3>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="email">Votre nouveau mot de passe * : </label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="password" name="password" id="password " class="form-control">
                            </div>
